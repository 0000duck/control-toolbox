timeHorizon 3.0

initType    0 ; 0 = zero, 1 = linear, 2 = integrated with zero control action, 3 = random

gnms
{
	integrator Euler
	discretization Matrix_exponential
	closedLoopShooting 0 					; (1 = closed loop shooting, 0 = open-loop shooting)
    dt 0.001
    dt_sim 0.001
    epsilon 1e-6
	max_iterations 10
    fixedHessianCorrection false
    recordSmallestEigenvalue false
    min_cost_improvement 1e-12
    maxDefectSum 1e-5
    meritFunctionRho 1.0
    nThreads 4
    nThreadsEigen 4
    loggingPrefix GNMS
    ;locp_solver HPIPM_SOLVER
    locp_solver GNRICCATI_SOLVER
    nlocp_algorithm GNMS
    
    line_search
	{
		active true ;
		adaptive false ;
		maxIterations 10 ;
		alpha_0 1.0 ;
		n_alpha 0.5 ;
	}
}


ilqr
{
	integrator Euler
	discretization Matrix_exponential
	closedLoopShooting 1 					; (1 = closed loop shooting, 0 = open-loop shooting)
    dt 0.001
    dt_sim 0.001
    epsilon 1e-6
	max_iterations 10
    fixedHessianCorrection false
    recordSmallestEigenvalue false
    min_cost_improvement 1e-12
    maxDefectSum 1e-5
    nThreads 1    
    nThreadsEigen 4
    loggingPrefix ILQR
    ;locp_solver HPIPM_SOLVER
    locp_solver GNRICCATI_SOLVER
    nlocp_algorithm ILQR
    
    line_search
	{
		active true;
		adaptive false ;
		maxIterations 10 ;
		alpha_0 1.0 ;
		n_alpha 0.5 ;
	}
}